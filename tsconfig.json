{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es6",
        "declaration": false,
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types/",
            "typings/"
        ]
    },
    "include": [
        "src/**/*.ts",
        "types/**/*.d.ts",
        "node_modules/@types/**/index.d.ts",
    ]
}
